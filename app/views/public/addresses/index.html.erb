<div class="container"><!--きむこー作成中-->
  <div>
    <h2>配送先登録/一覧</h2>

      <%= form_with model: @addresses, url: public_addresses_path(@addresses), method: :post do |f| %>

      <div class="field">
        <label class="postal-code-label">郵便番号(ハイフンなし)</label>
        <%= f.text_field :postal_code, autofocus: true %>
      </div>


      <div class="field">
        <label class="address-label">住所</label>
        <%= f.text_field :address, autofocus: true, size:"60*60" %>
      </div>


      <div class="field">
        <label class="address-label">宛名</label>
        <%= f.text_field :name, autofocus: true, size:"30*30" %>
      </div>


       <%= f.submit "新規登録", class: "btn btn-success" %>
       <% end %>

    <table class="table table-bordered address-table">
       <thead>
         <tr class="table-head" style="background-color:#F5F5F5;"><!--表のヘッダ部分？参考サイト有、background-colorで灰色っぽくしたbyきむこー-->
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>

          <th>&nbsp;</th><!--空欄を入れられる？参考サイト有　byきむこー-->
          <th>&nbsp;</th>
         </tr>
       </thead>


       <tbody>
         <%= @addresses.each do |address| %><!--繰り返し処理入れる？とりあえずdeliveriesコントローラーに定義もしてるbyきむこー-->
          <tr>
            <td><%= shipping_address.postal_code %></td>
            <td><%= shipping_address.street_address %></td>
            <td><%= shipping_address.receive_name %></td>
            <td><%= link_to "編集する", edit_public_delivery(:id),class: "btn btn-success"%></td><!--編集するボタン押したら配送先編集画面に移動する？ byきむこー-->
            <td><%= link_to "削除する", public_delivery_path(:id),  class: "btn btn-danger", method: :delete %></td>
          </tr>
         <% end %>

      </tbody>
    </table>
  </div>
</div>
