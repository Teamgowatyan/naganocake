          <div class="container">
            <div class="row">
              <!--ジャンル検索-->
              <div class="col-xs-9">
                <div class="row">
                  <!--画像-->
                  <!--<div style="float: left; margin: 15px 50px;">-->
                    <% if @item.image.attached? %>
                      <%= image_tag @item.image, size: "300x300" %>
                    <% else %>
                      <%= image_tag 'no_image', size: "300x300" %>
                    <% end %>
                  <!--</div>-->
                  
                    <div style="width:400px; height:300px; float:left;">
                    <!--商品名-->
                    <h3>
                      <%= @item.name %>
                    </h3><br>
                    <!--商品説明-->
                    <p>
                      <%= @item.introduction %>
                    </p>
                    <!--税込価格-->
                    <p>
                      ¥
                      <%= (@item.price*1.1).floor %>
                        <span style="font-size:12px;">
                        （税込）
                        </span>
                    </p>
                  
                  
                  </div>
                  
                </div>
              </div>
              
              <div class="col-xs-7">
              </div>
              
              <div class="col-xs-5">
                <!--個数選択-->
                <%#= form_with model: @item, url: public_cart_items_path(@cart_item), method: :patch do |f| %>
                <%= form_for @cart_item, url: public_cart_items_path(@cart_item) do |f| %>
                  <%= f.hidden_field :item_id  , :price => @item.id %>
                  <%= f.number_field :amount , placeholder: "個数選択", min: 1, max: 3 %>
                <!--カートに入れる-->
                  <%= f.submit "カートに入れる" ,class: 'btn btn-primary' %>
                <% end %>
              </div>
              
            </div>
          </div>