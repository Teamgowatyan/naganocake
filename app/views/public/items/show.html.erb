          <div class="container">
            <div class="row">
              <!--ジャンル検索-->
              <div class="col-xs-9">
                <div class="row">
                  <!--画像-->
                  <% if @item.image.attached? %>
                    <%= image_tag @item.image, size: "300x300" %>
                  <% else %>
                    <%= image_tag 'no_image', size: "300x300" %>
                  <% end %>
                  <!--商品名-->
                  <p>
                    <%= @item.name %>
                  </p>
                  <!--商品説明-->
                  <p>
                    <%= @item.introduction %>
                  </p>
                  <!--税込価格-->
                  <p>
                    <%= @item.is_active %>
                    （税込）
                  </p>
                </div>
              </div>
              
              <div class="col-xs-7">
              </div>
              
              <div class="col-xs-5">
                <!--個数選択-->
                <%= form_with model: @item, url: public_cart_items_path(@cart_item) do |f| %>
                  <%= f.hidden_field :item_id  , :value => @item.id %>
                  <%= f.number_field :number_of_items , placeholder: "個数選択", min: 1, max: 3 %>
                <!--カートに入れる-->
                  <%= f.submit "カートに入れる" ,class: 'btn btn-primary' %>
                <% end %>
              </div>
              
            </div>
          </div>