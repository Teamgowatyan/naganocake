          <div class="container">
            <div class="row">
              <!--ジャンル検索-->
              <div class="col-xs-2">
                <table class="table table-hover table-bordered">
                  <thead>
                    <tr>
                      <th class="active text-center">
                        <!--<h5 class="genre_said">ジャンル検索</h5>-->
                      </th>
                    </tr>
                  </thead>
                  <tbody>
                      <tr>
                      </tr>
                  </tbody>
                </table>
              </div>
              
              <div class="col-xs-1"></div>
              
                <div class="col-xs-9">
                  <h2>
                    <!--<i class="fas fa-cookie-bite"></i>-->
                    商品一覧
                    <span style="font-size:20px;">（全<%= @quantity %>件）</span>
                  </h2>
                        <div class="row">
                          <% @items.each do |item| %>
                            <div class="box" style="float:left; margin-right:20px;">
                              <% if item.image.attached? %>
                                <%= image_tag item.image, size: "200x200" %>
                              <% else %>
                                <%= image_tag 'no_image', size: "200x200" %>
                              <% end %>
                            </div>
                            
                            <p><%= item.name %></p>
                            
                            <p>¥<%= (item.price*1.1).floor %></p>
                          <% end %>
                          
                        </div>
              
              </div>
              
            </div>
          </div>